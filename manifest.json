{
  "manifest_version": 2,
  "name": "Randaris Animelist Downloader",
  "version": "0.1",
  "description": "You can download your animelist easily with this extension.",
  "homepage_url": "https://github.com/BenKato151/Randaris_Animelist_Downloader/",
  "icons": {
     "16":  "images/get_started16.png",
     "32":  "images/get_started32.png",
     "48":  "images/get_started48.png",
    "128": "images/get_started128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.randaris.app/*"],
      "js": ["Scripts/jquery-3.4.1.min.js", "getPagesSource.js", "Scripts/download.js"]
    }
  ],

  "permissions": [
    "activeTab", "downloads", "tabs", "*://*.randaris.app/*"
  ],

  "browser_action": {
    "default_icon": "images/get_started32.png",
    "default_title": "Randaris Animelist Downloader",
    "default_popup": "popup/index.html"
  }
}
